# Frontend Configuration
VITE_FRONTEND_URL=http://localhost:3000
VITE_API_BASE_URL=/api
VITE_REDIRECT_URL=https://2117.zinsyaikh.my.id

# Backend Configuration (untuk Vercel Functions)
FRONTEND_URL=http://localhost:3000

# JWT/Session Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-min-32-chars
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Authentication Credentials
# Password harus di-hash dengan bcrypt atau diubah saat setup
AUTH_USERNAME=2117
AUTH_PASSWORD=2117
AUTH_PASSWORD_HASH=$2a$10$YourHashedPasswordHereFromBcrypt

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
ATTEMPT_WINDOW_MINUTES=15

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
REMEMBER_ME_DURATION_DAYS=7

# Security
CSRF_PROTECTION_ENABLED=true
HTTPS_ONLY=true
SECURE_COOKIES=true
SAME_SITE_COOKIES=Strict

# Development/Production
NODE_ENV=development
VERCEL_ENV=development

